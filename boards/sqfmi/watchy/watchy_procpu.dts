/dts-v1/;

#include <espressif/esp32/esp32_pico_d4.dtsi>
#include "watchy-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <zephyr/dt-bindings/regulator/axp192.h>
#include <zephyr/dt-bindings/mipi_dbi/mipi_dbi.h>
#include <espressif/partitions_0x1000_amp.dtsi>


// Schematic: https://github.com/sqfmi/watchy-hardware/blob/v2.0/WatchySchematic.pdf
/ {
	model = "Watchy PROCPU";
	compatible = "sqfmi,watchy";

	aliases {
		sw0 = &user_button_0;
		sw1 = &user_button_1;
		sw2 = &user_button_2;
		sw3 = &user_button_3;
		uart-0 = &uart0;
		watchdog0 = &wdt0;
		accel0 = &bma423;
	};

	chosen {
		zephyr,sram = &sram1;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,bt-hci = &esp32_bt_hci;
	};

	gpio_keys {
		compatible = "gpio-keys";

		user_button_0: button_0 {
			label = "User button 0";
			gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_0>;
		};

		user_button_1: button_1 {
			label = "User button 1";
			gpios = <&gpio0 25 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_1>;
		};

		user_button_2: button_2 {
			label = "User button 2";
			gpios = <&gpio1 3 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_2>;
		};

		user_button_3: button_3 {
			label = "User button 3";
			gpios = <&gpio0 4 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_3>;
		};
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_tx_gpio1 &uart0_rx_gpio3>;
	pinctrl-names = "default";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&wifi {
	status = "okay";
};

&esp32_bt_hci {
	status = "okay";
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
	sda-gpios = <&gpio0 21 GPIO_OPEN_DRAIN>;
	scl-gpios = <&gpio0 22 GPIO_OPEN_DRAIN>;
	pinctrl-0 = <&i2c0_default>;
	scl-timeout-us = <0>;
	pinctrl-names = "default";

	bma423: bma423@18 {
		compatible = "bosch,bma4xx";
		reg = <0x18>;
		status = "okay";
		int1-gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
	};
};
